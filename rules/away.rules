rule "Turn all lights off at 23.10 if alarm is activated"
	when
		Time cron "0 10 23 * * ?"
	then
		if (NestHome_away.state == "away") {
		 	logDebug("rules","Turning all the random lights off.")
		 	sendCommand(Lights_Random, OFF)
		}
end
