rule "BASEMENT_PIR_BATTERY Notification"
	when
		Item BASEMENT_PIR_BATTERY updated
	then
		if (BASEMENT_PIR_BATTERY.state <= 10) {
		 	sendNotification("kfkkail@gmail.com", "Basement PIR needs batteries 2xAAA - " + BASEMENT_PIR_BATTERY.state)
		}
end

